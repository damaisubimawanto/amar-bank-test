<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="HintTextInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="ErrorTextInput" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/font_10</item>
    </style>

    <style name="SubmitButton" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>